# ===========================================
# EduTwin Production Environment Variables
# ===========================================
# Copy this file to .env.production and fill in the values

# ============ DATABASE ============
# RDS PostgreSQL connection string (from Terraform output)
DATABASE_URL=postgresql://admin:YOUR_PASSWORD@your-rds-endpoint.rds.amazonaws.com:5432/edutwin

# ============ REDIS (ElastiCache) ============
REDIS_URL=redis://your-elasticache-endpoint.cache.amazonaws.com:6379

# ============ SECURITY ============
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-production-secret-key-here

# ============ LLM CONFIGURATION ============
LLM_PROVIDER=gemini
LLM_MODEL=gemini-1.5-flash
LLM_API_KEY=your-gemini-api-key
LLM_TIMEOUT_SECONDS=60
LLM_CONCURRENCY=6

# ============ CORS ============
# Comma-separated list of allowed origins
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ============ LOGGING ============
LOG_LEVEL=INFO
ENVIRONMENT=production

# ============ AWS SPECIFIC ============
AWS_REGION=us-east-1

# Database Configuration
POSTGRES_DB=edutwin
POSTGRES_USER=your_database_user
POSTGRES_PASSWORD=your_secure_database_password_here

# Database Connection URL
DATABASE_URL=postgresql://your_database_user:your_secure_database_password_here@db:5432/edutwin

# Redis Configuration
REDIS_URL=redis://redis:6379

# Backend Configuration
SECRET_KEY=your_secret_key_minimum_32_characters_long_random_string
BACKEND_URL=http://backend:8000

# Logging Configuration
LOG_LEVEL=INFO

# LLM provider settings
# Choose: 'gemini' or 'generic' or 'openai'
LLM_PROVIDER=gemini
LLM_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash:generateContent
LLM_API_KEY=your_gemini_api_key_here
LLM_MODEL=gemini-2.5-flash
LLM_TIMEOUT_SECONDS=60

# Vector backend: 'disk' (default) or 'faiss'
VECTOR_BACKEND=disk

# Optional: override sentence-transformers model for embeddings
# EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

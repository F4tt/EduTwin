{
  "family": "edutwin-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/edutwin-ecs-task-execution-role",
  "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/edutwin-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.us-east-1.amazonaws.com/edutwin-backend:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp",
          "name": "http"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "LLM_PROVIDER",
          "value": "gemini"
        },
        {
          "name": "LLM_MODEL",
          "value": "gemini-1.5-flash"
        },
        {
          "name": "LLM_TIMEOUT_SECONDS",
          "value": "120"
        },
        {
          "name": "LLM_CONCURRENCY",
          "value": "4"
        },
        {
          "name": "LOG_LEVEL",
          "value": "INFO"
        },
        {
          "name": "CORS_ORIGINS",
          "value": "https://edutwin.online,https://*.edutwin.online"
        },
        {
          "name": "PYTHONPATH",
          "value": "/app"
        },
        {
          "name": "PYTHONDONTWRITEBYTECODE",
          "value": "1"
        },
        {
          "name": "PYTHONUNBUFFERED",
          "value": "1"
        },
        {
          "name": "WORKERS",
          "value": "2"
        },
        {
          "name": "WORKER_CONNECTIONS",
          "value": "1000"
        },
        {
          "name": "MAX_REQUESTS",
          "value": "1000"
        },
        {
          "name": "TIMEOUT",
          "value": "300"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:${AWS_ACCOUNT_ID}:secret:edutwin/database-url"
        },
        {
          "name": "SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:${AWS_ACCOUNT_ID}:secret:edutwin/secret-key"
        },
        {
          "name": "LLM_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:${AWS_ACCOUNT_ID}:secret:edutwin/llm-api-key"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:${AWS_ACCOUNT_ID}:secret:edutwin/redis-url"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/edutwin-backend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "backend",
          "awslogs-create-group": "true",
          "awslogs-datetime-format": "%Y-%m-%d %H:%M:%S"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/health || exit 1"
        ],
        "interval": 60,
        "timeout": 30,
        "retries": 5,
        "startPeriod": 300
      },
      "stopTimeout": 120,
      "startTimeout": 600,
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "dependsOn": [],
      "dockerLabels": {
        "service": "edutwin-backend",
        "environment": "production",
        "version": "latest"
      }
    }
  ],
  "volumes": [],
  "placementConstraints": [],
  "tags": [
    {
      "key": "Name",
      "value": "edutwin-backend"
    },
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "Service",
      "value": "backend"
    }
  ]
}